<div class="page-bg">
    <div class="show-content">
        <div class="show-thread">
            <h1 class="thread-title"><%= @post.title %></h1>
            <div class="thread-category"><%= render 'posts/post_category', object: @post %></div>
            <div class="thread-post-date"><%= l @post.created_at %></div>
        </div>

        <div class="thread-reply">
            <%= render 'replies/reply' %>
        </div>
        <div class="thread-reply-form">
            <%= render 'replies/reply_form', post: @post %>
        </div>
    </div>
</div>