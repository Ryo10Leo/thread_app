<div class="page-bg">
    <div class="form">
        <h2>新規登録</h2>

        <%= form_for(@user, url: signup_path) do|f| %>

            <%= render'shared/error_messages',object: f.object %>

            <%= f.hidden_field :user_id, :value => create_user_id %>

            <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email ,class: 'form-control',autocomplete: 'off' %>
            </div>

            <div class="form-group">
            <%= f.label "パスワード" %>
            <%= f.text_field :password ,class: 'form-control',autocomplete: 'off' %>
            </div>

            <div class="form-group">
            <%= f.label "パスワード確認" %>
            <%= f.text_field :password_confirmation ,class: 'form-control' %>
            </div>

            <%= f.submit '登録する', class: "submit-btn" %>
        <% end %>
    </div>
</div>